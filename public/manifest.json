{
  "manifest_version": 3,
  "name": "DonuTool",
  "version": "1.0",
  "description": "DonuTool is a floating cursor-following toolbar that offers instant, overlay-based access to essential tools.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "donuTool-logo-white.png",
    "32": "donuTool-logo-white.png",
    "48": "donuTool-logo-white.png",
    "128": "donuTool-logo-white.png"
  }
}
